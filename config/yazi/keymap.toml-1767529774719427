# Navigation with hjkl
[[manager.prepend_keymap]]
on = ["h"]
run = "leave"
desc = "Leave the directory"

[[manager.prepend_keymap]]
on = ["l"]
run = "enter"
desc = "Enter the child directory"

[[manager.prepend_keymap]]
on = ["j"]
run = "arrow 1"
desc = "Move cursor down"

[[manager.prepend_keymap]]
on = ["k"]
run = "arrow -1"
desc = "Move cursor up"

# Arrow keys
[[manager.prepend_keymap]]
on = ["<Up>"]
run = "arrow -1"
desc = "Move cursor up"

[[manager.prepend_keymap]]
on = ["<Down>"]
run = "arrow 1"
desc = "Move cursor down"

[[manager.prepend_keymap]]
on = ["<Left>"]
run = "leave"
desc = "Go to parent directory"

[[manager.prepend_keymap]]
on = ["<Right>"]
run = "enter"
desc = "Enter the child directory"

# Open with Enter
[[manager.prepend_keymap]]
on = ["<Enter>"]
run = "open"
desc = "Open selected files"

[[manager.prepend_keymap]]
on = ["o"]
run = "open"
desc = "Open with neovim"

# Find
[[manager.prepend_keymap]]
on = ["/"]
run = "find --smart"
desc = "Find next file"

[[manager.prepend_keymap]]
on = ["?"]
run = "find --previous --smart"
desc = "Find previous file"

[[manager.prepend_keymap]]
on = ["n"]
run = "find_arrow"
desc = "Goto the next found"

[[manager.prepend_keymap]]
on = ["N"]
run = "find_arrow --previous"
desc = "Goto the previous found"

# Copy/Paste
[[manager.prepend_keymap]]
on = ["y"]
run = "yank"
desc = "Copy"

[[manager.prepend_keymap]]
on = ["p"]
run = "paste"
desc = "Paste"

# Delete
[[manager.prepend_keymap]]
on = ["d"]
run = "remove"
desc = "Delete"

# Create
[[manager.prepend_keymap]]
on = ["A"]
run = "create --dir"
desc = "Create directory"

[[manager.prepend_keymap]]
on = ["a"]
run = "create"
desc = "Create file"

# Undo
[[manager.prepend_keymap]]
on = ["u"]
run = "undo"
desc = "Undo"

[[manager.prepend_keymap]]
on = ["<C-r>"]
run = "redo"
desc = "Redo"

# Quit
[[manager.prepend_keymap]]
on = ["q"]
run = "quit"
desc = "Quit"
