set $mod Mod4
font pango:FiraCode Nerd Font Bold 12

# Monitor setup - autodetect and configure on startup
exec_always --no-startup-id ~/.config/i3/monitor-setup.sh

exec --no-startup-id dex --autostart --environment i3
exec_always --no-startup-id feh --bg-scale ~/.config/i3/momo_ayase_gruvbox.png
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
exec --no-startup-id nm-applet
exec --no-startup-id xset s off && xset -dpms && xset s noblank
exec --no-startup-id dunst
exec --no-startup-id xclip
exec --no-startup-id fcitx5
exec_always --no-startup-id picom -b --config ~/.config/picom/picom.conf

# Touchpad configuration
exec_always --no-startup-id xinput set-prop "ELAN0504:01 04F3:3091 Touchpad" "libinput Tapping Enabled" 1
exec_always --no-startup-id xinput set-prop "ELAN0504:01 04F3:3091 Touchpad" "libinput Natural Scrolling Enabled" 1
exec_always --no-startup-id xinput set-prop "ELAN0504:01 04F3:3091 Touchpad" "libinput Disable While Typing Enabled" 1
exec_always --no-startup-id xinput set-prop "ELAN0504:01 04F3:3091 Touchpad" "libinput Accel Speed" 0.35

# Use pactl to adjust volume and brightness.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +2% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -2% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl set +5%
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set 5%-

# Use Mouse+$mod
floating_modifier $mod
tiling_drag modifier titlebar
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Focus follows mouse (disable if you prefer click-to-focus)
focus_follows_mouse yes

# When switching to a workspace, move mouse to that monitor
mouse_warping output

# Rofi
bindsym $mod+a exec bash ~/.config/rofi/launchers/launcher.sh 
bindsym $mod+Shift+e exec bash ~/.config/rofi/powermenu/powermenu.sh

# main apps
bindsym $mod+t exec kitty --detach
bindsym $mod+b exec brave
#bindsym $mod+e exec thunar
bindsym $mod+Shift+s exec pavucontrol

# kill focused window
bindsym $mod+Shift+q kill

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle
# change container layout (stacked, tabbed, toggle split)
bindsym $mod+d layout tabbed
bindsym $mod+s layout toggle split
# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# Move floating windows between monitors
bindsym $mod+Ctrl+Left move workspace to output left
bindsym $mod+Ctrl+Right move workspace to output right
bindsym $mod+Ctrl+Up move workspace to output up
bindsym $mod+Ctrl+Down move workspace to output down

# Screen Capture
bindsym $mod+P exec --no-startup-id maim "/home/$USER/Pictures/$(date)"
bindsym Ctrl+$mod+P exec --no-startup-id maim --select | xclip -selection clipboard -t image/png

# Monitor management hotkeys
bindsym $mod+m exec --no-startup-id ~/.config/i3/monitor-setup.sh
bindsym $mod+Shift+m exec --no-startup-id arandr

# Workspace variables
set $fm eDP-1
set $sm HDMI-1-1

# Define output for workspaces
workspace 1 output $fm
workspace 2 output $fm
workspace 3 output $fm
workspace 4 output $fm
workspace 5 output $fm
workspace 6 output $sm
workspace 7 output $sm
workspace 8 output $sm
workspace 9 output $sm
workspace 10 output $sm

# Define names for default workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+10 workspace $ws10

# Alternative: Access all 10 workspaces with $mod (comment above if using this)
# bindsym $mod+1 workspace $ws1
# bindsym $mod+2 workspace $ws2
# bindsym $mod+3 workspace $ws3
# bindsym $mod+4 workspace $ws4
# bindsym $mod+5 workspace $ws5
# bindsym $mod+6 workspace $ws6
# bindsym $mod+7 workspace $ws7
# bindsym $mod+8 workspace $ws8
# bindsym $mod+9 workspace $ws9
# bindsym $mod+0 workspace $ws10

# Move to cycle workspace
bindsym $mod+Tab workspace next
bindsym $mod+Shift+Tab workspace prev
bindsym $mod+Shift+Right workspace next
bindsym $mod+Shift+Left workspace prev

# Move to next/prev workspace on current monitor
bindsym $mod+Ctrl+Tab workspace next_on_output
bindsym $mod+Ctrl+Shift+Tab workspace prev_on_output

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# Move focused container to other monitor
bindsym $mod+Shift+greater move container to output right
bindsym $mod+Shift+less move container to output left

# reload the configuration file
# bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+c restart

# resize window (you can also use the mouse for that)
mode "resize" {
        bindsym j resize shrink width 5 px or 5 ppt
        bindsym k resize grow height 5 px or 5 ppt
        bindsym l resize shrink height 5 px or 5 ppt
        bindsym semicolon resize grow width 5 px or 5 ppt

        bindsym Left resize shrink width 5 px or 5 ppt
        bindsym Down resize grow height 5 px or 5 ppt
        bindsym Up resize shrink height 5 px or 5 ppt
        bindsym Right resize grow width 5 px or 5 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+Shift+r mode "resize"

# Start i3bar to display a workspace bar
bar {
	status_command i3status
	position bottom
	workspace_min_width 24
	padding 2px 8px 2px 8px
	strip_workspace_numbers yes
	tray_output primary

	colors {
	background #141c21
	statusline #141c21
	separator #141c21

	# colour of border, background, and text
	focused_workspace #141c21 #d12f2c #bfbaac
	active_workspace #141c21 #141c21 #bfbaac
	inactive_workspace #141c21 #141c21 #bfbaac
	urgent_workspace #141c21 #b08500 #bfbaac
	}
}

# colour of border, background, text, indicator, and child_border
client.focused #d12f2c #263640 #93a1a1 #696ebf #FAAFBE
client.focused_inactive #263640 #b08500 #93a1a1 #263640 #263640
client.unfocused #263640 #b08500 #93a1a1 #263640 #263640
client.urgent #263640 #b08500 #93a1a1 #263640 #263640
client.placeholder #263640 #b08500 #93a1a1 #263640 #263640
client.background #263640

# window rules, you can find the window class using xprop
for_window [class=gwenview|Eog|Sxiv|feh|spectacle|mpv|vlc|ark|File-roller|Xarchiver] floating enable
for_window [class=gwenview|Eog|Sxiv|feh|spectacle|mpv|vlc|ark|File-roller|Xarchiver] focus
for_window [class=".*"] border pixel 2
hide_edge_borders smart
gaps inner 10
smart_gaps on
