    "custom/poweroff": {
        "format": "‚èª",
        "on-click": "exec bash ${HOME}/.config/rofi/powermenu/powermenu.sh",
        "tooltip-format": "Power Menu",
        "tooltip": true
    },
    "custom/power": {
        "format": "‚èª ",
        "tooltip": false,
        "menu": "on-click",
        "menu-file": "~/.config/waybar/power_menu.xml",
        "menu-actions": {
            "shutdown": "shutdown",
            "reboot": "reboot",
            "suspend": "systemctl suspend",
            "hibernate": "systemctl hibernate"
        }
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },
    "custom/powerbutton": {
        "format": "‚èª",
        "on-click": "poweroff",
        "tooltip-format": "Power Off"
    },
    "custom/reboot": {
        "format": "Û∞úâ",
        "on-click": "reboot",
        "tooltip-format": "Reboot"
    },
    "custom/suspend": {
        "format": "ÔìÆ",
        "on-click": "systemctl suspend",
        "tooltip-format": "Suspend"
    },
    //"custom/lock": {
    //    "format": "Û∞çÅ",
    //    "on-click": "hyprlock",
    //    "tooltip-format": "Lock"
    //},
    //"custom/idlekiller": {
    //    "format": "ÔÅÆ",
    //    "on-click": "pkill hypridle || hypridle",
    //    "tooltip-format": "Inhibit Idle"
    //},
    "group/power": {
        "modules": [
            "custom/powerbutton",
            "custom/reboot",
            "custom/suspend",
            //"custom/lock",
            //"custom/idlekiller",
            "user"
        ],
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500
        }
    },
    "group/stats": {
        "modules": [
            "battery",
            "group/brightness",
            "group/audio"
        ],
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 750,
            "transition-left-to-right": false
        }
    },
    "custom/appmenu": {
        "format": "Û∞Äª",
