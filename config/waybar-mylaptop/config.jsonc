        // "on-click": "rofi -show drun",
        "tooltip": false
    },
    "wlr/taskbar": {
        "format": "{icon}",
        "on-click": "activate",
        "on-scroll-up": "niri msg action focus-column-left",
        "on-scroll-down": "niri msg action focus-column-right"
    },
    "group/apps": {
        "modules": [
            // "custom/appmenu",
            "wlr/taskbar"
        ],
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500,
            "transition-left-to-right": false
        }
    },
    "pulseaudio/slider": {
        "min": 0,
        "max": 100,
        "orientation": "horizontal"
    },
    "backlight/slider": {
        "min": 0,
        "max": 100,
        "orientation": "horizontal"
    },
    "group/audio": {
        "modules": [
            "pulseaudio",
            "pulseaudio/slider"
        ],
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500,
            "transition-left-to-right": true
        }
    },
    "group/brightness": {
        "modules": [
            "backlight",
            "backlight/slider"
        ],
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500,
            "transition-left-to-right": true
        }
    },
    "user": {
        "format": "{work_H}:{work_M}:{work_S} ‚Üë",
        "interval": 60
    },
    "niri/window": {
