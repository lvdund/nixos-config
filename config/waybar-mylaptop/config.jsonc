    "niri/workspaces": {
        "format": "{icon}",
        "format-icons": {
            "active": "ÔÜí"
            // "default": "ÔÑë"
        }
    },
    "tray": {
        "icon-size": 20,
        "spacing": 15,
        "reverse-direction": true, // New apps appear on the left of existing ones
        "show-passive-items": true // Show icons that aren't actively running but are in the tray
    },
    "clock": {
        // "timezone": "America/New_York",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><big>{calendar}</big></tt>",
        "calendar": {
            "mode": "month",
            "mode-mon-col": 1,
            "weeks-pos": "right",
            "on-scroll": 1,
            "format": {
                "months": "<span color='#ffead3'><b>{}</b></span>",
                "days": "<span color='#ecc6d9'><b>{}</b></span>",
                "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
                "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
                "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
            }
        },
        "actions": {
            "on-click-right": "mode",
            "on-click-forward": "tz_up",
            "on-click-backward": "tz_down",
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down"
        },
        // "format-alt": "{:%Y-%m-%d}",
        "format": "ÔÄó {:%H:%M:%S Û∞∏ó %Y-%m-%d}",
        "interval": 1
    },
    "backlight": {
        // "device": "acpi_video1",
        "format": "{percent}% {icon}",
