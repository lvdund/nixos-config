            "default": [
                "ÔÄ¶",
                "ÔÄß ",
                "ÔÄ® "
            ]
        },
        "on-click": "pactl set-sink-mute 0 toggle",
        "tooltip": false
    },
    "custom/media": {
        "format": "{icon} {text}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
